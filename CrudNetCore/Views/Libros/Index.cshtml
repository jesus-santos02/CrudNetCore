@model IEnumerable<CrudNetCore.Models.Libro>

@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {        
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>        
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-controller="Libros" asp-action="Create">Agregar Nuevo Libro</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Id)</th>
                        <th>@Html.DisplayNameFor(x => x.Titulo)</th>
                        <th>@Html.DisplayNameFor(x => x.Descripcion)</th>
                        <th>@Html.DisplayNameFor(x => x.FechaLanzamiento)</th>
                        <th>@Html.DisplayNameFor(x => x.Autor)</th>
                        <th>@Html.DisplayNameFor(x => x.Precio)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Titulo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.FechaLanzamiento</td>
                            <td>@item.Autor</td>
                            <td>@item.Precio</td>
                            <td>
                                <a asp-controller="Libros" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Libros" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros.</p>
        }

    </div>
</div>
